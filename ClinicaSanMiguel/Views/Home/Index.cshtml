<!-- Convenios y noticias -->
<div class="bg-light p-5 mb-5">
    <div class="container">
        <h2 class="text-center mb-4 text-primary">Convenios y Noticias</h2>
        <ul class="list-group">
            <li class="list-group-item">Nueva emergencia pediátrica</li>
