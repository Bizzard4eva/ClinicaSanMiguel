@{
    ViewData["Title"] = "Clínica San Miguel";
}

<!-- Banner principal -->
<div class="bg-info text-white text-center p-5 mb-5">
    <h1 class="display-4 fw-bold">Clínica San Miguel</h1>
    <p class="lead">Siempre cerca de ti, cuando más nos necesitas</p>
    <p><strong>Teléfonos:</strong> (01) 615-6767 / 920 014 570</p>
    <p><strong>Dirección:</strong> Av. Belisario Suárez 998, San Juan de Miraflores</p>
    <a asp-controller="Home" asp-action="Reserva"  class="btn btn-light btn-lg mt-3">Reserva tu cita</a>
</div>

<!-- Carrusel de imágenes -->
<div id="bannerCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://images.pexels.com/photos/52527/dentist-pain-borowac-cure-52527.jpeg" class="d-block w-100" alt="Imagen 1">
        </div>
        <div class="carousel-item">
            <img src="https://images.pexels.com/photos/33637448/pexels-photo-33637448.jpeg" class="d-block w-100" alt="Imagen 2">
        </div>
        <div class="carousel-item">
            <img src="https://images.pexels.com/photos/356040/pexels-photo-356040.jpeg" class="d-block w-100" alt="Imagen 3">
        </div>
        <div class="carousel-item">
            <img src="https://images.pexels.com/photos/4033148/pexels-photo-4033148.jpeg" class="d-block w-100" alt="Imagen 4">
        </div>
        <div class="carousel-item">
            <img src="https://images.pexels.com/photos/7089018/pexels-photo-7089018.jpeg" class="d-block w-100" alt="Imagen 5">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Sección informativa -->
<div class="container mb-5">
    <div class="row align-items-center">
        <div class="col-md-6 text-center">
            <img src="https://images.pexels.com/photos/263402/pexels-photo-263402.jpeg"
                 class="info-img" alt="Clínica San Miguel">
        </div>
        <div class="col-md-6">
            <h2 class="text-primary">Siempre cerca de ti</h2>
            <p>
                En la <strong>Clínica San Miguel</strong>, contamos con más de 27 años de experiencia,
                ofreciendo un servicio de calidad y seguridad a todos nuestros pacientes de la mano de
                un reconocido staff médico y una infraestructura de primer nivel.
            </p>
            <p>
                Estamos ubicados en la Av. Belisario Suárez 998 en el distrito de San Juan de Miraflores
                y actualmente contamos con 33 especialidades médicas al servicio de Lima Sur y ponemos a
                disposición de todos los peruanos.
            </p>
            <a href="#" class="btn btn-outline-primary">Conócenos</a>
        </div>
    </div>
</div>


<!-- Servicios principales -->
<div class="container mb-5">
    <h2 class="text-center mb-4 text-primary">Nuestros Servicios</h2>
    <div class="row text-center g-4">
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h4 class="text-primary">Reserva una cita</h4>
                    <p>Haz tu reserva a través de nuestro canal digital</p>
                    <a asp-action="SelectLoginRegister" asp-controller="Home" class="btn btn-primary">Reservar</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h4 class="text-success">Servicios para ti</h4>
                    <p>Bienestar y cuidado para toda tu familia</p>
                    <a class="btn btn-outline-success" href="#">Conocer</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h4 class="text-danger">Emergencias</h4>
                    <p>Atención inmediata cuando más lo necesitas</p>
                    <a class="btn btn-outline-danger" href="#">Conocer</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h4 class="text-info">Staff Médico</h4>
                    <p>Conoce a tu doctor de confianza y sus horarios</p>
                    <a class="btn btn-outline-info" href="#">Conocer</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Casos de Éxito (Carrusel) -->
