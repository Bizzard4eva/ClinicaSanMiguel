        </ul>
    </div>
</div>

<!-- Suscripción -->
<div class="bg-info text-white p-5 mb-5">
    <div class="container text-center">
        <h2>¡Nos importa tu bienestar!</h2>
        <p>Suscríbete y recibe promociones y ofertas exclusivas</p>
        <form class="row g-2 justify-content-center">
            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="Nombres*" required />
            </div>
            <div class="col-md-3">
                <input type="text" class="form-control" placeholder="Apellidos*" required />
            </div>
            <div class="col-md-3">
                <input type="email" class="form-control" placeholder="Correo electrónico*" required />
            </div>
            <div class="col-md-3">
                <input type="tel" class="form-control" placeholder="Teléfono" />
            </div>
            <div class="col-12 mt-3">
                <button class="btn btn-light btn-lg">Enviar</button>
            </div>
        </form>
    </div>
</div>

