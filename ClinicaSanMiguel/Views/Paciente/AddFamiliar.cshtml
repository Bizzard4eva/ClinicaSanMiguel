@{
    @model ClinicaSanMiguel.DTOs.AddFamiliarRequestDto
    ViewData["Title"] = "AddFamiliar";
}

<h2>Agregar familiar</h2>

<form asp-action="AddFamiliar" method="post">
    <input type="hidden" asp-for="idPacienteTitular" />

    <div class="form-group">
        <label asp-for="idTipoParentesco"></label>
        <input asp-for="idTipoParentesco" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="idTipoDocumento"></label>
        <input asp-for="idTipoDocumento" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="documento"></label>
        <input asp-for="documento" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="apellidoPaterno"></label>
        <input asp-for="apellidoPaterno" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="apellidoMaterno"></label>
        <input asp-for="apellidoMaterno" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="nombres"></label>
        <input asp-for="nombres" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="fechaNacimiento"></label>
        <input asp-for="fechaNacimiento" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="celular"></label>
        <input asp-for="celular" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="correo"></label>
        <input asp-for="correo" type="email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="idGenero"></label>
        <input asp-for="idGenero" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-controller="ReservaMedica" asp-action="SelectPatient" class="btn btn-secondary">Cancelar</a>
</form>
