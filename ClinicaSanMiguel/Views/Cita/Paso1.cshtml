@model ClinicaSanMiguel.Models.Paciente;

@{
    ViewData["Title"] = "Reservar Cita - Seleccione Paciente";
}

<!-- Paso 1: Seleccione Paciente - Inspirado en 03.png -->
<section class="appointment-section">
    <div class="container">

        <!-- Título de la página -->
        <div class="page-title text-center mb-4">
            <h1 class="text-primary">Reservar Cita</h1>
            <p class="text-muted">Reserva tu Cita o la de tu familiar haciendo click en su nombre.</p>
        </div>

        <!-- Barra de progreso -->
        <div class="progress-bar-container mb-5">
            <div class="progress-steps">
                <div class="step active">
                    <div class="step-circle"></div>
                    <span class="step-label">Paso 1: Seleccione Paciente</span>
                </div>
                <div class="step">
                    <div class="step-circle"></div>
                    <span class="step-label">Paso 2: Seleccione Especialidad</span>
                </div>
                <div class="step">
                    <div class="step-circle"></div>
                    <span class="step-label">Paso 3: Seleccione Médico</span>
                </div>
                <div class="step">
                    <div class="step-circle"></div>
                    <span class="step-label">Paso 4: Confirmación</span>
                </div>
            </div>
        </div>

        <!-- Selección de paciente -->
        <div class="patient-selection-container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="selection-card">
                        <!-- Titular -->
                        <div class="patient-option mb-4">
                            <h4 class="text-primary mb-3">Titular</h4>
                            @if(ViewBag.PacienteTitular != null)
                            {
                                var titular = (Paciente)ViewBag.PacienteTitular;
                                <div class="patient-card titular-card" data-patient-id="@titular.idPaciente">
                                    <div class="patient-info">
                                        <h5 class="patient-name">@titular.nombres @titular.apellidoPaterno @titular.apellidoMaterno</h5>
                                        <p class="patient-details">Titular de la cuenta - DNI: @titular.documento</p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    No se encontraron datos del titular
                                </div>
                            }
                        </div>

                        <!-- Familiar -->
                        <div class="patient-option mb-4">
                            <h4 class="text-primary mb-3">Familiar</h4>
                            <div class="family-section">
                                @if(ViewBag.Familiares != null && ((List<Paciente>)ViewBag.Familiares).Count > 0)
                                {
                                    @foreach(var familiar in (List<Paciente>)ViewBag.Familiares)
                                    {
                                        <div class="patient-card mb-3" data-patient-id="@familiar.idPaciente">
                                            <div class="patient-info">
                                                <h5 class="patient-name">@familiar.nombres @familiar.apellidoPaterno @familiar.apellidoMaterno</h5>
                                                <p class="patient-details">Familiar - DNI: @familiar.documento</p>
                                            </div>
                                        </div>
                                    }
                                }
                                
                                <a href="#" class="add-family-link text-decoration-none">
                                    Registra a tus familiares
                                </a>
                            </div>
                        </div>

                        <!-- Botones de acción -->
                        <div class="action-buttons text-center mt-4">
                            <form asp-controller="Cita" asp-action="Paso1" method="post" id="patientForm">
                                @{
                                    var defaultPatientId = ViewBag.PacienteTitular != null ? 
                                        ((Paciente)ViewBag.PacienteTitular).idPaciente : 1;
                                }
                                <input type="hidden" name="pacienteId" id="selectedPatientId" value="@defaultPatientId" />
                                <button type="button" class="btn btn-outline-secondary me-3" onclick="history.back()">
                                    Regresar
                                </button>
                                <button type="submit" class="btn btn-warning btn-lg">
                                    Continuar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.patient-card').click(function() {
                // Remover selección anterior
                $('.patient-card').removeClass('selected');
                
                // Seleccionar nueva opción
                $(this).addClass('selected');
                
                // Actualizar el ID del paciente seleccionado
                const patientId = $(this).data('patient-id');
                $('#selectedPatientId').val(patientId);
            });

            // Seleccionar titular por defecto
            $('.titular-card').addClass('selected');
        });
    </script>
}