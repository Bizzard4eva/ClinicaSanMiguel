@model IEnumerable<ClinicaSanMiguel.DTOs.GeneralListResponseDto>

@{
    ViewData["Title"] = "Reservar Cita - Seleccione Clínica";
}

<!-- Paso 4: Seleccione Clínica -->
<section class="appointment-section">
    <div class="container">

        <!-- Título de la página -->
        <div class="page-title text-center mb-4">
            <h1 class="text-primary">Reservar Cita - Clínica San Miguel</h1>
            <p class="text-muted">Selecciona en cuál de nuestras sedes deseas atenderte.</p>
        </div>

        <!-- Barra de progreso -->
        <div class="progress-bar-container mb-5">
            <div class="progress-steps">
                <div class="step completed">
                    <div class="step-circle"></div>
                    <span class="step-label">Paso 1: Seleccione Paciente</span>
                </div>
                <div class="step completed">
                    <div class="step-circle"></div>
                    <span class="step-label">Paso 2: Seleccione Seguro</span>
                </div>
                <div class="step completed">
                    <div class="step-circle"></div>
                    <span class="step-label">Paso 3: Seleccione Especialidad</span>
                </div>
                <div class="step active">
                    <div class="step-circle"></div>
                    <span class="step-label">Paso 4: Seleccione Clínica</span>
                </div>
                <div class="step">
                    <div class="step-circle"></div>
                    <span class="step-label">Paso 5: Seleccione Médico</span>
                </div>
                <div class="step">
                    <div class="step-circle"></div>
                    <span class="step-label">Paso 6: Confirmación</span>
                </div>
            </div>
        </div>

        <!-- Formulario de selección -->
        <div class="clinic-selection-container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <form asp-controller="ReservaMedica" asp-action="SelectClinic" method="post" id="clinicForm">
                        
                        <!-- Selección de clínica -->
                        <div class="clinic-selection mb-4">
                            <div class="form-group">
                                <label class="form-label">Seleccione la sede</label>
                                <select name="idClinicaSeleccionada" class="form-select clinic-select" required>
                                    <option value="">SELECCIONE UNA SEDE</option>
                                    @if(Model != null)
                                    {
                                        @foreach(var clinica in Model)
                                        {
                                            <option value="@clinica.Id">@clinica.Nombre.ToUpper()</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>

                        <!-- Mostrar clínica seleccionada -->
                        <div class="selected-clinic mb-4" id="selectedClinic" style="display: none;">
                            <div class="alert alert-warning">
                                <h6>Sede seleccionada:</h6>
                                <p id="clinicName" class="mb-0"></p>
                            </div>
                        </div>

                        <!-- Información adicional -->
                        <div class="clinic-info mb-4">
                            <div class="alert alert-info">
                                <p class="mb-0">* Seleccione una sede para continuar con la reserva</p>
                            </div>
                        </div>

                        <!-- Botones de acción -->
                        <div class="action-buttons text-center mt-4">
                            <button type="button" class="btn btn-outline-secondary me-3" onclick="history.back()">
                                Regresar
                            </button>
                            <button type="submit" class="btn btn-warning btn-lg">
                                Continuar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Mostrar clínica seleccionada
            $('.clinic-select').change(function() {
                const selectedText = $(this).find('option:selected').text();
                if (selectedText && selectedText !== 'SELECCIONE UNA SEDE') {
                    $('#clinicName').text(selectedText);
                    $('#selectedClinic').show();
                } else {
                    $('#selectedClinic').hide();
                }
            });
        });
    </script>
}