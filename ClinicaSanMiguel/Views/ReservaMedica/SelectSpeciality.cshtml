@model IEnumerable<ClinicaSanMiguel.DTOs.GeneralListResponseDto>

@{
    ViewData["Title"] = "Reservar Cita - Seleccione Especialidad";
}

<!-- Paso 3: Seleccione Especialidad -->
<section class="appointment-section">
    <div class="container">

        <!-- Título de la página -->
        <div class="page-title text-center mb-4">
            <h1 class="text-primary">Reservar Cita - Clínica San Miguel</h1>
            <p class="text-muted">Selecciona en qué especialidad deseas atenderte.</p>
        </div>

        <!-- Barra de progreso -->
        <div class="progress-bar-container mb-5">
            <div class="progress-steps">
                <div class="step completed">
                    <div class="step-circle"></div>
                    <span class="step-label">Paso 1: Seleccione Paciente</span>
                </div>
                <div class="step completed">
                    <div class="step-circle"></div>
                    <span class="step-label">Paso 2: Seleccione Seguro</span>
                </div>
                <div class="step active">
                    <div class="step-circle"></div>
                    <span class="step-label">Paso 3: Seleccione Especialidad</span>
                </div>
                <div class="step">
                    <div class="step-circle"></div>
                    <span class="step-label">Paso 4: Seleccione Médico</span>
                </div>
                <div class="step">
                    <div class="step-circle"></div>
                    <span class="step-label">Paso 5: Confirmación</span>
                </div>
            </div>
        </div>

        <!-- Formulario de selección -->
        <div class="specialty-selection-container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <form asp-controller="ReservaMedica" asp-action="SelectSpeciality" method="post" id="specialtyForm">
                        
                        <!-- Selección de especialidad -->
                        <div class="specialty-selection mb-4">
                            <div class="form-group">
                                <label class="form-label">Elije tu Especialidad</label>
                                <select name="idEspecialidadSeleccionada" class="form-select specialty-select" required>
                                    <option value="">SELECCIONE</option>
                                    @if(Model != null)
                                    {
                                        @foreach(var especialidad in Model)
                                        {
                                            <option value="@especialidad.Id">@especialidad.Nombre.ToUpper()</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>

                        <!-- Mostrar especialidad seleccionada -->
                        <div class="selected-specialty mb-4" id="selectedSpecialty" style="display: none;">
                            <div class="alert alert-warning">
                                <h6>Especialidad seleccionada:</h6>
                                <p id="specialtyName" class="mb-0"></p>
                            </div>
                        </div>

                        <!-- Información adicional -->
                        <div class="specialty-info mb-4">
                            <div class="alert alert-info">
                                <p class="mb-0">* Seleccione una especialidad para continuar</p>
                            </div>
                        </div>

                        <!-- Botones de acción -->
                        <div class="action-buttons text-center mt-4">
                            <button type="button" class="btn btn-outline-secondary me-3" onclick="history.back()">
                                Regresar
                            </button>
                            <button type="submit" class="btn btn-warning btn-lg">
                                Continuar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Mostrar especialidad seleccionada
            $('.specialty-select').change(function() {
                const selectedText = $(this).find('option:selected').text();
                if (selectedText && selectedText !== 'SELECCIONE') {
                    $('#specialtyName').text(selectedText);
                    $('#selectedSpecialty').show();
                } else {
                    $('#selectedSpecialty').hide();
                }
            });
        });
    </script>
}
